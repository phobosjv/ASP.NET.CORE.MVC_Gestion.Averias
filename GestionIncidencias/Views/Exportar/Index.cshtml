@{
    ViewData["Title"] = "Averías - Exportar";
    var hoy = DateTime.Today;
    var añoActual = hoy.Year;

}

<partial name="../Home/_Submenu" model="SubMenuIncidencias.Exportar" />

<div class="d-flex justify-content-center w-100">
    <div class="d-flex justify-content-center" w-100">
        <h3 class="mt-3 mb-4">Exportar todas las averías:</h3>
    </div>
</div>

<div class="d-flex justify-content-center w-100 mb-4">
    <div class="d-flex justify-content-around" w-100">
        <a asp-action="ExportarExcelTodo" class="btn btn-success ms-2 me-2">
            Exportar todos los campos
        </a>
        <a asp-action="ExportarExcelTodoSinDescripcion" class="btn btn-success ms-2 me-2">
            Exportar sin descripción
        </a>
    </div>

</div>

<div class="d-flex justify-content-center w-100">
    <div class="d-flex justify-content-center" w-100">
        <h3 class="mt-3 mb-4">Exportar averías por año:</h3>
    </div>
</div>

@for (int a = ViewBag.anyoMax; a >= ViewBag.anyoMin && a >= ViewBag.anyoMax -5; a--)
{
    <div class="d-flex justify-content-center w-100 mb-2">
        <div class="d-flex justify-content-around" w-100">
            <label class="fs-4">Año @a: &nbsp;</label>
        
            <div class="d-flex justify-content-around" w-100">

                <a id="exportarExcelAnyo" asp-action="ExportarExcelAnyo" asp-route-anyo="@a" class="btn btn-success ms-2 me-2">
                    ... con todos los campos
                </a>
                <a id="exportarExcelAnyoSinDescripcion" asp-action="ExportarExcelAnyoSinDescripcion" asp-route-anyo="@a" class="btn btn-success ms-2 me-2">
                    ... sin descripción
                </a>

            </div>

        </div>

    </div>
}





